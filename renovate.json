{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "docker:enableMajor"
    ],
    "prConcurrentLimit": 10,
    "prHourlyLimit": 10,
    "packageRules": [
        {
          "matchPackageNames": ["*"],
          "schedule": ["before 10am"]
        },
        {
          "packageRules": [
            {
              "matchDatasources": ["npm"],
              "matchPackageNames": ["saf"],  // or
              "matchManagers": ["custom.regex"], // or
              "automerge": true
            },
            {
              "matchDatasources": ["docker"],
              "matchDepNames": ["alpine"],  // or
              "automerge": true
            },
            {
              "matchDatasources": ["docker"],
              "matchDepNames": ["docker.io/radiantone/fid"],  // or
              "matchUpdateTypes": ["patch", "minor"]
            }
          ]
        }
      ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "\\.yml$"
            ],
            "matchStrings": [
                "SCAP_SECURITY_GUIDE_VERSION *: *\"(?<currentValue>.+?)\""
            ],
            "depNameTemplate": "ComplianceAsCode/content",
            "datasourceTemplate": "github-releases"
        },
        {
            "customType": "regex",
            "fileMatch": [
                "\\.yml$"
            ],
            "matchStrings": [
                "MITRE_SAF_VERSION *: *\"(?<currentValue>.+?)\""
            ],
            "depNameTemplate": "@mitre/saf",
            "datasourceTemplate": "npm"
        },
        {
            "customType": "regex",
            "fileMatch": [
                "\\.yml$"
            ],
            "matchStrings": [
                "WOLFI_STIG_VERSION *: *\"(?<currentValue>.+?)\""
            ],
            "depNameTemplate": "chainguard-dev/stigs",
            "datasourceTemplate": "github-releases"
        },
        {
            "customType": "regex",
            "fileMatch": [
                "\\.yml$"
            ],
            "matchStrings": [
                "CURRENT_VERSION_TAG *: *\"(?<currentValue>.+?)\""
            ],
            "depNameTemplate": "radiantone/fid",
            "datasourceTemplate": "docker"
        }
    ]
}
